{
  "manifest_version": 2,

  "name": "SportHub",
  "description": "Customized updates about your favourite sports",
  "version": "0.1.4",

  "permissions": [
    "http://cricscore-api.appspot.com/",
    "notifications"
  ],
  "background": {
    "scripts": ["bower_components/jquery/jquery.js","scripts/background.js"]
  },
  "browser_action": {
    "default_icon": {
        "19": "images/icon.png",
        "38": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
        },
    "default_popup": "index.html"
  },
  "icons": { "16": "images/icon.png",
           "48": "images/icon.png",
          "128": "images/icon.png" }
}
